<%- include("../partials/header") %>

	<div class = "chatbox">
		<div class = "chatlogs">
			<% convo.forEach(function(chat){%>

				<div id = "self" class="chat">
					<p class="chat-message">
						<%= chat.text %>
					</p>
				</div>

				<div class="chat bot">
					<p class="chat-message">
						<%= chat.reply %>
					</p>
				</div>
			<% }); %>
		</div>
		<form method="POST" action="/">
			<div class="form-group">
				<input  class = "form-control" type="text" name="ques" placeholder="">
			</div>
			<div class="form-group">
				<button class = "btn btn-primary btn-lg">send</button>
			</div>
		</form>
	</div>

<%- include("../partials/footer") %>